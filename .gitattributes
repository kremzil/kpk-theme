*.css   text eol=lf
*.scss  text eol=lf
*.html  text eol=lf
*.json  text eol=lf
*.md    text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.xml   text eol=lf
*.sh    text eol=lf

# Бинарники не трогаем
*.png binary
*.jpg binary
*.jpeg binary
